@using UI.Models.Client

@model IEnumerable<SelectingClientModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h2>All Client</h2>

<div class="form-horizontal">
    <hr />
    <div class="form-group">
        <table class="table table-responsive" style="width:400px">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    <p>Name</p>
                </th>
                <th>
                    <p>Number</p>
                </th>
            </tr>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SelectedName)
                    </td>
                    <td>
                        <p>
                            +@Html.DisplayFor(modelItem => item.SelectedСodeOfTheCountry) 
                            (@Html.DisplayFor(modelItem => item.SelectedRegionCode)) 
                            @Html.DisplayFor(modelItem => item.SelectedSubscriberNumber)
                        </p>
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "UpdateClient", new { id=item.Id }) |
                        @Html.ActionLink("Delete", "DeleteClient", new { id=item.Id })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
