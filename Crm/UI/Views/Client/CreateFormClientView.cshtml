@{
}
<h2>Create Client</h2>

<form asp-action="CreateClient" class="row">
    <div class="col-4">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <p></p>

        <div class="form-group">
            <label asp-for="СodeOfTheCountry" class="control-label"></label>
            <select asp-for="СodeOfTheCountry"
                    class="form-control"
                    asp-items="ViewBag.EnumValueModel">
                <option>Select code</option>
            </select>
            <span asp-validation-for="СodeOfTheCountry" class="text-danger"></span>
        </div>
        <p></p>
        <div class="form-group">
            <label asp-for="RegionCode" class="control-label"></label>
            <input asp-for="RegionCode" class="form-control" />
            <span asp-validation-for="RegionCode" class="text-danger"></span>
        </div>
        <p></p>
        <div class="form-group">
            <label asp-for="SubscriberNumber" class="control-label"></label>
            <input asp-for="SubscriberNumber" class="form-control" />
            <span asp-validation-for="SubscriberNumber" class="text-danger"></span>
        </div>
        <p></p>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>
