@model IEnumerable<UI.Models.Client>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="form-horizontal">
    <hr />
    <div class="form-group">
        <table class="table table-responsive" style="width:400px">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.СodeOfTheCountry)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RegionCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubscriberNumber)
                </th>
            </tr>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.СodeOfTheCountry)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegionCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubscriberNumber)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>